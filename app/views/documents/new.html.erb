<h1>Documents</h1>

<% if !@document.errors.empty? %>   
  <div>   
    <ul>   
      <% @document.errors.full_messages.each do |msg| %>   
        <li><%= msg %></li>   
      <% end %>      
    </ul>   
  </div>   
<% end %> 

<div>   
   <%= form_for(@document)  do |f| %>   
      <p><%= f.label :title %>   
      <%= f.text_field :title %> </p>  

      <p><%= f.label :description %>   
      <%= f.text_field :description %> </p>

      <p><%= f.label :attachment %>   
      <%= f.file_field :attachment %></p>

      <p><%= f.label :tags %>   
      <%#= f.text_field :tag_ids, input_html: {multiple: true} %>
      <%= f.text_field :all_tags %></p>
         
      <%= f.submit "Save" %>   
   <% end %>   
   <p><%= link_to "back", root_url %></p>
</div>   
